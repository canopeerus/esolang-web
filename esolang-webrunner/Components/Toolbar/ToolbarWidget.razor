@namespace esolang_webrunner.Components.Toolbar

@using Blazorise

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="navbar-toggler-icon"></span>
                </button> <a class="navbar-brand" href="#"><img height='45' width='120' src="{{ url_for('static',filename='images/redwing-logo-current.png') }}" alt='esolang-web-logo' /></a>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <Button class="btn btn-primary" Disabled="isRunButtonEnabled"><i class="fas fa-play"></i> Run<span class="sr-only">(current)</span></Button>
                        </li>
                        <li class="nav-item">
                            <Button Class="btn btn-primary" Disabled="true"><i class="fas fa-stop"></i> Stop</Button>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</div>

